#!/bin/bash

yes | pkg update
pkg install wget -y
pkg install aria2 -y

termux-setup-storage
yes | pkg update

BASE_URL="https://shouko.store"
DEST_DIR="/sdcard/Download"

for i in {1..10}; do
    FILE_NAME="ArceusXLite$i.apk"
    APK_PATH="$DEST_DIR/$FILE_NAME"

    echo "üì• ƒêang t·∫£i $FILE_NAME ..."
    aria2c -x 16 -s 16 -o "$FILE_NAME" -d "$DEST_DIR" "$BASE_URL/$FILE_NAME"

    if [ -f "$APK_PATH" ]; then
        echo "üì¶ ƒêang c√†i $FILE_NAME ..."
        su -c "pm install -r $APK_PATH"
    else
        echo "‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y $FILE_NAME (c√≥ th·ªÉ file kh√¥ng t·ªìn t·∫°i tr√™n server)"
    fi
done

echo "‚úÖ Ho√†n t·∫•t t·∫£i & c√†i 10 file ArceusXLite"
