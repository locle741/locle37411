#!/bin/bash

yes | pkg update
pkg install -y aria2

termux-setup-storage
yes | pkg update

BASE_URL="https://shouko.store"
DEST_DIR="/sdcard/Download"

echo "üì• ƒêang t·∫£i nhanh ArceusXLite1‚Äì10 ..."
aria2c -x 16 -s 16 --continue=true --max-tries=5 -d "$DEST_DIR" \
  "$BASE_URL/ArceusXLite1.apk" \
  "$BASE_URL/ArceusXLite2.apk" \
  "$BASE_URL/ArceusXLite3.apk" \
  "$BASE_URL/ArceusXLite4.apk" \
  "$BASE_URL/ArceusXLite5.apk" \
  "$BASE_URL/ArceusXLite6.apk" \
  "$BASE_URL/ArceusXLite7.apk" \
  "$BASE_URL/ArceusXLite8.apk" \
  "$BASE_URL/ArceusXLite9.apk" \
  "$BASE_URL/ArceusXLite10.apk"

for i in {1..10}; do
    FILE_NAME="ArceusXLite$i.apk"
    APK_PATH="$DEST_DIR/$FILE_NAME"
    TMP_PATH="/data/local/tmp/$FILE_NAME"

    if [ -s "$APK_PATH" ]; then
        echo "üì¶ Copy $FILE_NAME v√†o /data/local/tmp ..."
        su -c "cp '$APK_PATH' '$TMP_PATH' && chmod 644 '$TMP_PATH'"

        echo "üì¶ ƒêang c√†i $FILE_NAME ..."
        su -c "pm install -r '$TMP_PATH'"
    else
        echo "‚ùå File $FILE_NAME ch∆∞a t·∫£i xong ho·∫∑c b·ªã l·ªói, b·ªè qua."
    fi
done

echo "‚úÖ Ho√†n t·∫•t t·∫£i & c√†i ArceusXLite"
