#!/bin/bash

yes | pkg update
pkg install wget -y

termux-setup-storage
yes | pkg update

# Domain chung
BASE_URL="https://shouko.store"

# Th∆∞ m·ª•c l∆∞u file
DEST_DIR="/sdcard/Download"

# T·∫£i & c√†i l·∫ßn l∆∞·ª£t CodexLite1.apk ‚Üí CodexLite10.apk
for i in {1..10}; do
