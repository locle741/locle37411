    APK_PATH="$DEST_DIR/$FILE_NAME"

    echo "üì• ƒêang t·∫£i $FILE_NAME ..."
    wget -O "$APK_PATH" "$BASE_URL/$FILE_NAME"

    echo "üì¶ ƒêang c√†i ƒë·∫∑t $FILE_NAME ..."
    su -c "pm install -r $APK_PATH"
