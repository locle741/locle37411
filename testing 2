
#!/bin/bash
if [ -e "/data/data/com.termux/files/home/storage" ]; then
	rm -rf /data/data/com.termux/files/home/storage
fi
termux-setup-storage
yes | pkg update
pkg install wget -y
yes | pkg upgrade
yes | pkg i python
yes | pkg i python-pip
echo "📥 Đang tải Codex APK..."
wget -O /sdcard/Download/Codex1.apk "https://shouko.store/CodexLite.apk"

echo "📥 Đang tải Codex APK..."
wget -O /sdcard/Download/Codex2.apk "https://shouko.store/CodexLite.apk"

echo "📥 Đang tải MT2 APK..."
wget -O /sdcard/Download/mt2.apk "https://pan.mt2.cn/mt/MT2.18.5.apk"

su -c "pm install -r /sdcard/Download/Codex1.apk"
su -c "pm install -r /sdcard/Download/Codex2.apk"
su -c "pm install -r /sdcard/Download/mt2.apk"
